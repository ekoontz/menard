{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "codedeploy:CreateApplication",
                "iam:CreateRole"
            ],
            "Resource": [
                "arn:aws:iam::AWS_ACCOUNT_ID:role/*",
                "arn:aws:codedeploy:*:AWS_ACCOUNT_ID:application:*"
            ]
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
                "iam:GetRole",
                "iam:PassRole",
                "iam:DeleteRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "cloudformation:CreateChangeSet",
                "codedeploy:CreateDeploymentGroup",
                "codedeploy:DeleteApplication",
                "codedeploy:DeleteDeploymentGroup",
                "lambda:AddPermission",
                "lambda:RemovePermission",
                "lambda:GetFunction",
                "lambda:DeleteFunction",
                "lambda:CreateAlias",
                "lambda:DeleteAlias",
                "lambda:GetAlias",
                "lambda:UpdateAlias",
                "lambda:CreateFunction",
                "lambda:ListVersionsByFunction",
                "lambda:ListTags",
                "lambda:PublishVersion",
                "s3:GetObject",
                "apigateway:GET",
                "apigateway:POST",
                "apigateway:DELETE",
                "apigateway:PATCH",
                "apigateway:PUT"
            ],
            "Resource": "*"
        }
    ]
}
