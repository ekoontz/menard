{"en" [(let [number? (atom true)
             lower (atom {:number? number?
                          :times 10})
             higher (atom {:number? number?
                           :times 1})]
         {:cat :conjunction
          :subcat {:1 {:teen? false
                       :nul? false
                       :sem higher}
                   :2 {:teen? false
                       :sem lower}
                   :3 []}
          :sem {:pred :times
                :number? true
                :arg1 lower
                :arg2 higher}})]
 ;; TODO: add second sense of "en" (more common)
 ;; as in "katten en honden" with {:pred :and}
 
 "maar" [(let [lower (atom {:polarity :+})
               higher (atom {:polarity :-})
               reflexive? (atom :top)]
           {:cat :conjunction
            :subcat {:1 {:sem higher}
                     :2 {:sem lower
                         :reflexive? reflexive?}
                     :3 []}
            :reflexive? reflexive?
            :sem {:pred :and ;; note that the {:pred :and} is the same as with the second case of "en".
                  :args {:first higher
                         :rest {:first lower
                                :rest []}}}})]
 
 "niet" [(let [sem (atom :top)]
           {:cat :neg
            :sem sem
            :subcat {:1 {:cat :noun
                         :sem sem}}})]
}


         


